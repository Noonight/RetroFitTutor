<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_address"
        android:inputType="textCapWords"
        android:key="main_address_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_address" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="main_update_key"
        android:summary="@string/pref_description_auto_update"
        android:title="@string/pref_title_auto_update" />

</PreferenceScreen>
